<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="350dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@drawable/popout_border">

    <TextView
        android:id="@+id/tvSelangor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="Selangor"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="490dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/cbSabak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Sabak Bernam"
                android:textSize="19sp" />

            <CheckBox
                android:id="@+id/cbKuala"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Kuala Selangor"
                android:textSize="19sp" />

            <CheckBox
                android:id="@+id/cbHulu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Hulu Selangor"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/tvHulu"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:text="[Kuala Kubu Bahru/Serendah]"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="italic" />

            <CheckBox
                android:id="@+id/cbKlang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Klang"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/tvKlang"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:text="[Port Klang/Kapar]"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="italic" />

            <CheckBox
                android:id="@+id/cbLangat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Kuala Langat"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/tvLangat"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:text="[Banting]"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="italic" />

            <CheckBox
                android:id="@+id/cbSepang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Sepang"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/tvSepang"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:text="[Putrajaya/Cyberjaya/KLIA]"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="italic" />

            <CheckBox
                android:id="@+id/cbHuluLangat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Hulu Langat"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/tvHuluLangat"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:text="[Semenyih/Kajang]"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="italic" />

            <CheckBox
                android:id="@+id/cbPetaling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Petaling"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/tvPetaling"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:text="[Petaling Jaya/Bandar Sunway/Seri Kembangan/Subang Jaya/Sugai Buloh/Shah Alam]"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="italic" />

            <CheckBox
                android:id="@+id/cbGombak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Gombak"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/tvGombak"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:text="[Rawang/Ulu Klang]"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="italic" />

            <CheckBox
                android:id="@+id/cbKL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Kuala Lumpur"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/tvKL"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:text="[Ampang/Seputeh/Maluri/Pandan Indah/Cheras/Bandar Tun Razak/Mont' Kiara/Segambut/TTDI/Kepong/Wangsa Maju/Setapak/Setiawangsa/Selayang]"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="italic" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSelangorOK"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_rounded"
                android:text="OK"
                android:textAllCaps="false"
                android:textColor="@color/primary"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>