<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.finalyearproject_drivme">

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo_wheel"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_logo_wheel"
        android:supportsRtl="true"
        android:theme="@style/Theme.FinalYearProjectDrivme">

        <activity android:name=".AgreementPolicy"/>

        <!-- Account UI -->
        <activity android:name=".ResetSuccess" />
        <activity android:name=".ResetPW" />
        <activity android:name=".FPWOtp" />

        <!-- Driver UI -->
        <activity android:name=".DriverOTP" />
        <activity android:name=".DriverPhoneNumber" />
        <activity android:name=".DriverSignUp" />
        <activity android:name=".DriverLogin" />
        <activity android:name=".DriverOption" />

        <!-- Tourist UI -->
        <activity android:name=".TouristLogin"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TouristSignUp" />
        <activity android:name=".TouristOTP" />
        <activity android:name=".TouristPhoneNumber" />
        <activity android:name=".ForgotPassword" />
        <activity android:name=".TouristIntro" />

        <!-- App UI -->
        <activity android:name=".Role" />
        <activity android:name=".SplashActivity" />
        <activity android:name=".WelcomeTo" />
        <activity android:name=".WelcomeBack" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>